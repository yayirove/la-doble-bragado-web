---
import "../styles/global.css";
const { title = "La Doble Bragado", children } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap">
    <link rel="stylesheet" href="https://use.typekit.net/dgy8exd.css">
  </head>
  <body>

    <!-- Logo centrado arriba -->
    <div class="header-logo">
      <img src="/assets/logo-redux-x1.png" alt="La Doble Bragado" />
    </div>
    

    <main>
      <slot />
    </main>

    <script src="/js/contador.js" defer></script>
    <script src="/js/parallax-hero.js" defer></script>
    <script src="/js/rellax.min.js" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    new Rellax('.rellax');
  });
</script>

  </body>
</html>
